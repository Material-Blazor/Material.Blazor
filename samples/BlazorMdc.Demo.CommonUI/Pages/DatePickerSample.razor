@page "/datepicker"



<h1 class="@MdcTypography.Heading4">Select samples</h1>

<p>See <code>DatePickerSample.razor</code> for sources.</p>

<MdcpDatePicker Label="Filled" @bind-Value="@filled" InputStyle="MdcSelectInputStyle.Filled" MinDate="min" MaxDate="max"></MdcpDatePicker>
<p style="margin-bottom: 4em;">Selected: '<strong>@filled.ToString()</strong>'</p>

<MdcpDatePicker Label="Weekdays Outlined" @bind-Value="@outlined" InputStyle="MdcSelectInputStyle.Outlined" DateSelectionCriteria="MdcDateSelectionCriteria.WeekdaysOnly" MinDate="min" MaxDate="max"></MdcpDatePicker>
<p style="margin-bottom: 20em;">Selected: '<strong>@outlined.ToString()</strong>'</p>

<p>Inline date picker purely for test purposes - in production please use <code>MatDatePickerSelect</code></p>
<MdcpDatePickerPanel @bind-Value="@inline" Class="mdc-elevation--z3" MinDate="min" MaxDate="max"></MdcpDatePickerPanel>
<p style="margin-bottom: 4em;">Selected: '<strong>@inline.ToString()</strong>'</p>



@code {
    DateTime inline = DateTime.Today.AddMonths(1);
    DateTime filled = DateTime.Today.AddMonths(1);
    DateTime outlined = DateTime.Today.AddMonths(1);

    DateTime min = new DateTime(2019, 12, 14);
    DateTime max = new DateTime(2097, 6, 14);
}