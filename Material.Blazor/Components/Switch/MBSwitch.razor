@namespace Material.Blazor
@inherits InputComponentFoundation<bool>


<div @ref="@ElementReference"
     @attributes="AttributesToSplat(SplatType.ClassAndStyleOnly)">

    <div class="mdc-switch__track"></div>
    <div class="mdc-switch__thumb-underlay">
        <div class="mdc-switch__thumb">
            <input @attributes="AttributesToSplat(SplatType.ExcludeClassAndStyle)"
                   class="mdc-switch__native-control" 
                   role="switch"
                   type="checkbox" 
                   id="@Id" 
                   @bind="@ReportingValue" />
        </div>
    </div>
</div>
<label for="@Id" style="margin-left: 1rem;">@Label</label>