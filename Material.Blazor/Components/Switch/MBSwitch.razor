@namespace Material.Blazor

@inherits InputComponent<bool>


<div @ref="@ElementReference"
     @attributes="AttributesToSplat(SplatType.IdClassAndStyleOnly)">

    <div class="mdc-switch__track"></div>
    <div class="mdc-switch__thumb-underlay">
        <div class="mdc-switch__thumb">
            <input @attributes="AttributesToSplat(SplatType.ExcludeIdClassAndStyle)"
                   class="mdc-switch__native-control" 
                   role="switch"
                   type="checkbox" 
                   id="@CrossReferenceId" 
                   @bind="@ComponentValue" />
        </div>
    </div>
</div>
<label for="@CrossReferenceId" style="margin-left: 1rem;">@Label</label>