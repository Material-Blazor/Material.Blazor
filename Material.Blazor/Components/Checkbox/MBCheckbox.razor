@namespace Material.Blazor
@inherits InputComponent<bool>


<div @ref="@FormReference" class="mdc-form-field @(@class))" style="@style">

    <MBTouchTargetWrapper ApplyTouchTargetWrapper="AppliedTouchTarget">
        <div @ref="@ElementReference"
             class="mdc-checkbox mdc-checkbox--touch @ActiveConditionalClasses"
             id="@id"
             @attributes="@EventAttributesToSplat()">

            <input @bind="@CheckedValue"
                   @attributes="OtherAttributesToSplat()"
                   type="checkbox"
                   class="mdc-checkbox__native-control @FieldClass"
                   id="@CrossReferenceId" />
            <div class="mdc-checkbox__background">
                <svg class="mdc-checkbox__checkmark"
                     viewBox="0 0 24 24">
                    <path class="mdc-checkbox__checkmark-path"
                          fill="none"
                          d="M1.73,12.91 8.1,19.28 22.79,4.59" />
                </svg>
                <div class="mdc-checkbox__mixedmark"></div>
            </div>
            <div class="mdc-checkbox__ripple"></div>
        </div>
    </MBTouchTargetWrapper>
    <label for="@CrossReferenceId">@Label</label>
</div>
