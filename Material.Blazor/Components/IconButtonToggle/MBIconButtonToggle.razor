@namespace Material.Blazor

@inherits InputComponent<bool>


<MBTouchTargetWrapper ApplyTouchTargetWrapper="AppliedTouchTarget">
    <button @ref="@ElementReference"
            class="mdc-icon-button @ActiveConditionalClasses @(@class)"
            id="@id"
            style="@style"
            @attributes="@OtherAttributesToSplat()"
            @onclick="@ToggleOnClick">

        <div class="mdc-icon-button__ripple"></div>
        <MBIcon class="mdc-icon-button__icon mdc-icon-button__icon--on mb-dp-menu__icon-button"
                IconFoundry="@IconFoundry"
                IconName="@IconOn" />
        <MBIcon class="mdc-icon-button__icon mb-dp-menu__icon-button"
                IconFoundry="@IconFoundry"
                IconName="@IconOff" />
    </button>
</MBTouchTargetWrapper>