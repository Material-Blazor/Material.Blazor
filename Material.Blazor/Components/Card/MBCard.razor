@namespace Material.Blazor
@inherits ComponentFoundation


<CascadingValue Value="@this" IsFixed="true">
    <div class="@MappedClassesAndUserClasses"
         style="@MappedStylesAndUserStyles"
         id="@id"
         @attributes="@OtherAttributesToSplat()">

        @if (Primary != null)
        {
            <div class="@PrimaryClass">
                @Primary
            </div>
        }

        @if (PrimaryAction != null)
        {
            <div @ref="@PrimaryActionReference"
                 @attributes="@EventAttributesToSplat()"
                 class="mdc-card__primary-action @PrimaryActionClass"
                 tabindex="0">

                @PrimaryAction
            </div>
        }

        @if (ActionButtons != null || ActionIcons != null)
        {
            <div class="mdc-card__actions">
                @if (ActionButtons != null)
                {
                    <div class="mdc-card__action-buttons">
                        @ActionButtons
                    </div>
                }

                @if (ActionIcons != null)
                {
                    <div class="mdc-card__action-icons">
                        @ActionIcons
                    </div>
                }
            </div>
        }
    </div>
</CascadingValue>

