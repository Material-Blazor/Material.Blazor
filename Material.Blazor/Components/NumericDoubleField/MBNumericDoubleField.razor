@namespace Material.Blazor

@inherits InputComponentFoundation<double>


<MBTextField @ref="@TextField"
             @attributes="@MyAttributes"
             step="@(Math.Pow(10, -MyDecimalPlaces).ToString())"
             min="@Min"
             max="@Max"
             @bind-Value="@FormattedValue"
             Label="@Label"
             Prefix="@Prefix"
             Suffix="@Suffix"
             LeadingIcon="@LeadingIcon"
             TrailingIcon="@TrailingIcon"
             IconFoundry="@IconFoundry"
             Density="@Density"
             TextInputStyle="@TextInputStyle"
             TextAlignStyle="@MBTextAlignStyle.Right"
             Disabled="@AppliedDisabled"
             @onfocusin="@OnFocusIn"
             @onfocusout="@OnFocusOut"
             @onkeydown="@StopForceSelect"
             @onmousedown="@StopForceSelect"
             @ontouchstart="@StopForceSelect" />