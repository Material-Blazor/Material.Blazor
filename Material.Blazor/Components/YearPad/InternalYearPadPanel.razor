@namespace Material.Blazor

@inherits InputComponent<DateTime>

<div class="mdc-typography--body2 mb-dp-container">

    <ul class="mdc-deprecated-list mb-dp-list">
        <li class="mdc-deprecated-list-item mdc-deprecated-list-item--selected mb-dp-list-item"
            data-value="@ValueText"
            aria-selected="true"
            role="option">
            <span class="mdc-deprecated-list-item__ripple"></span>
            <span @ref="@ListItemReference" class="mdc-deprecated-list-item__text mb-dp-list-item__text">@ValueText</span>
        </li>
    </ul>

    <div class="mb-dp-year-pad">
        <Microsoft.AspNetCore.Components.Web.Virtualization.Virtualize Items="YearsInGroupsOfFourYP" OverscanCount="10" ItemSize="48">
            <ItemContent Context="group">
                <div style="height: 48px !important; max-height: 48px !important; min-height: 48px !important; overflow: hidden;">
                    @foreach (var year in group)
                    {
                        <span style="padding: 0px 4px;">@year</span>
                        @*<InternalYearPadYearButton CurrentYear="@StartOfDisplayMonth.Year"
                                               CurrentYearId="@currentYearId"
                                               DisplayYear="@year"
                                               @key="@year"
                                               MaxDate="@MaxDate"
                                               MinDate="@MinDate"
                                               OnItemClickAsync="@OnYearItemClick"
                                               type="button" />*@
                    }
                </div>
            </ItemContent>
        </Microsoft.AspNetCore.Components.Web.Virtualization.Virtualize>
    </div>
</div>