@namespace Material.Blazor
@inherits ComponentFoundation


@if (Drawer != null)
{
    <a class="mdc-list-item @ActiveConditionalClasses @(@class)"
        style="@style"
        id="@id"
        @attributes="@AttributesToSplat()">

        <span class="mdc-list-item__ripple"></span>

        @if (LeadingIcon != null)
        {
            <MBIcon class="mdc-list-item__graphic"
                    IconFoundry="@IconFoundry"
                    IconName="@LeadingIcon" />
        }

        <span class="mdc-list-item__text">@Label</span>
    </a>
}
else if (Menu != null)
{
    <li class="mdc-list-item @ActiveConditionalClasses @(@class)"
        style="@style"
        id="@id"
        @attributes="@AttributesToSplat()"
        role="menuitem">

        <span class="mdc-list-item__ripple"></span>

        @if (LeadingIcon != null)
        {
            <MBIcon class="mdc-list-item__graphic"
                    IconFoundry="@IconFoundry"
                    IconName="@LeadingIcon" />
        }

        <span class="mdc-list-item__text">@Label</span>
    </li>
}