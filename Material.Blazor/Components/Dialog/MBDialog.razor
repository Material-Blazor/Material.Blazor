@namespace Material.Blazor
@inherits ComponentFoundation

<div @ref="DialogElem"
     class="mdc-dialog @ActiveConditionalClasses @(@class)"
     style="@style"
     id="@id"
     @attributes="@AttributesToSplat()">

    <CascadingValue Value="@this" IsFixed="true">
        <div class="mdc-dialog__container">
            @if (IsOpen)
            {
                <div class="mdc-dialog__surface @OverflowClass"
                     role="alertdialog"
                     aria-modal="true"
                     aria-labelledby="@(HasTitle ? titleId : (HasCustomHeader ? headerId : null))"
                     aria-describedby="@(HasBody ? bodyId : null)">

                    @if (HasTitle)
                    {
                        <h2 id="@titleId" class="mdc-dialog__title">@Title</h2>
                    }

                    @if (HasCustomHeader)
                    {
                        <div id="@headerId" class="mb-dialog__header">
                            @CustomHeader
                        </div>
                    }

                    @if (HasBody)
                    {
                        <div id="@bodyId" class="mdc-dialog__content">
                            @Body
                        </div>
                    }

                    @if (HasButtons)
                    {
                        <div class="mdc-dialog__actions">
                            @Buttons
                        </div>
                    }
                </div>
            }
        </div>
    </CascadingValue>

    <div class="mdc-dialog__scrim"></div>
</div>