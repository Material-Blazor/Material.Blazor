@namespace BlazorMdc
@inherits MdcComponentBase


<div @attributes="AttributesToSplat()">
    @if (ShieldType != PMdcShieldType.ValueOnly)
    {
        <div class="bmdc-shield--label @LabelClass" style="@LabelStyle">
            @if (!string.IsNullOrWhiteSpace(LabelIcon))
            {
                <div>
                    <PMdcIcon Icon="@LabelIcon" IconFoundry="@IconFoundry" Class="bmdc-shield--icon" />
                </div>
            }

            <div>@Label</div>
        </div>
    }

    @if (ShieldType != PMdcShieldType.LabelOnly)
    {
        <div class="bmdc-shield--value @ValueClass" style="@ValueStyle">
            @if (!string.IsNullOrWhiteSpace(ValueIcon))
            {
                <div>
                    <PMdcIcon Icon="@ValueIcon" IconFoundry="@IconFoundry" Class="bmdc-shield--icon" />
                </div>
            }
            
            <div>@Value</div>
        </div>
    }
</div>