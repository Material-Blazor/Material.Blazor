@namespace BlazorMdc
@inherits InputComponentFoundation<string>


<label @ref="ElementReference"
       @attributes="@AttributesToSplat(SplatType.ClassAndStyleOnly)">

    @if (AppliedInputStyle == MTTextInputStyle.Filled)
    {
        <span class="mdc-text-field__ripple"></span>
    }

    <span class="mdc-text-field__resizer">
        <textarea id="@id"
                  class="mdc-text-field__input @AppliedTextInputStyleClass @FieldClass"
                  @bind="@ReportingValue"
                  aria-labelledby="@labelId"
                  rows="@Rows"
                  cols="@Cols"
                  disabled="@AppliedDisabled"
                  @attributes="@AttributesToSplat(SplatType.ExcludeClassAndStyle)"></textarea>
    </span>

    @if (AppliedInputStyle == MTTextInputStyle.Outlined)
    {
        <span class="mdc-notched-outline">
            <span class="mdc-notched-outline__leading"></span>

            @if (ShowLabel)
            {
                <span class="mdc-notched-outline__notch">
                    <span class="mdc-floating-label @FloatingLabelClass" for="@Id" id="@labelId">@Label</span>
                </span>
            }

            <span class="mdc-notched-outline__trailing"></span>
        </span>
    }
    else
    {
        @if (ShowLabel)
        {
            <span class="mdc-floating-label @FloatingLabelClass" for="@Id" id="@labelId">@Label</span>
        }

        <span class="mdc-line-ripple"></span>
    }
</label>