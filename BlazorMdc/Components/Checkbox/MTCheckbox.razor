@namespace BlazorMdc
@inherits InputComponentFoundation<bool>


<div @ref="@FormReference" class="@FormFieldClass">
    <div class="mdc-touch-target-wrapper">
        <div @ref="@ElementReference"
             @attributes="@AttributesToSplat(SplatType.ExcludeHtmlExcludingClassAndStyle)">

            <input @bind="@ReportingValue"
                   type="checkbox"
                   class="mdc-checkbox__native-control @FieldClass"
                   id="@Id"
                   @attributes="AttributesToSplat(SplatType.HtmlExcludingClassAndStyle)" />
            <div class="mdc-checkbox__background">
                <svg class="mdc-checkbox__checkmark"
                     viewBox="0 0 24 24">
                    <path class="mdc-checkbox__checkmark-path"
                          fill="none"
                          d="M1.73,12.91 8.1,19.28 22.79,4.59" />
                </svg>
                <div class="mdc-checkbox__mixedmark"></div>
            </div>
            <div class="mdc-checkbox__ripple"></div>
        </div>
    </div>
    <label for="@Id">@Label</label>
</div>