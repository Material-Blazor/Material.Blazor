@namespace BlazorMdc
@inherits ValidatingInputComponentFoundation<TItem>
@typeparam TItem


<div @attributes="AttributesToSplat()">

    @foreach (var item in ItemArray)
    {
        <MTRadioButton @key="@item"
                       @bind-Value="@ReportingValue"
                       TItem="TItem"
                       Disabled="@item.Disabled"
                       EnableTouchWrapper="@EnableTouchWrapper"
                       Label="@item.Label"
                       Density="@Density"
                       TargetCheckedValue="@item.SelectedValue"
                       RadioGroupName="@RadioGroupName" />
    }

</div>