@namespace BlazorMdc


@if (TooltipType == MTTooltipType.Span)
{
    <span aria-describedby="@id">
        @if (Target != null)
        {
            @Target
        }
    </span>
}
else
{
    <div aria-describedby="@id">
        @if (Target != null)
        {
            @Target
        }
    </div>
}