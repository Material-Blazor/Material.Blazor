@namespace BlazorMdc
@inherits ComponentFoundation


<div @attributes="AttributesToSplat()">
    @if (ShieldType != MTShieldType.ValueOnly)
    {
        <div class="bmdc-shield--label @LabelClass" style="@LabelStyle">
            @if (!string.IsNullOrWhiteSpace(LabelIcon))
            {
                <div>
                    <MTIcon IconName="@LabelIcon" IconFoundry="@IconFoundry" class="bmdc-shield--icon" />
                </div>
            }

            <div>@Label</div>
        </div>
    }

    @if (ShieldType != MTShieldType.LabelOnly)
    {
        <div class="bmdc-shield--value @ValueClass" style="@ValueStyle">
            @if (!string.IsNullOrWhiteSpace(ValueIcon))
            {
                <div>
                    <MTIcon IconName="@ValueIcon" IconFoundry="@IconFoundry" class="bmdc-shield--icon" />
                </div>
            }
            
            <div>@Value</div>
        </div>
    }
</div>