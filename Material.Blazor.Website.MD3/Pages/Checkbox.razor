@page "/checkbox"

@inject IMBToastService ToastService



<DemonstrationPage ComponentAndPageName="Checkbox"
                   MaterialDesignPage="checkbox"
                   MinDensity="MBDensity.Minus5"
                   RequiresDisableSelection="true"
                   Title="Checkbox Demonstration">
    <Description>
        <p>
            Demonstrates Checkboxes.
        </p>
    </Description>

    <PageContent>
        <div class="mdc-layout-grid__cell--span-4">
            <Material.Blazor.MD2.MBCard AutoStyled="true">
                <Primary>
                    <h2 class="mb-card__title mdc-typography mdc-typography--headline6">
                        Basic component demo
                    </h2>

                    <h3 class="mb-card__subtitle mdc-typography mdc-typography--subtitle2">
                        Simple checkbox (Labels are PLUS additions).
                    </h3>

                    <MBCheckbox @bind-Value="@CheckboxState1"
                                @bind-Value:after="@(() => ComponentValueChanged(CheckboxState1, "Checkbox 1"))"
                                LabelPLUS="checkbox" />

                    <MBCheckbox @bind-Value="@CheckboxState2"
                    @bind-Value:after="@(() => ComponentValueChanged(CheckboxState2, "Checkbox 2"))"
                                IsIndeterminate=true
                                LabelPLUS="indeterminate" />

                    <MBCheckbox @bind-Value="@CheckboxState3"
                                @bind-Value:after="@(() => ComponentValueChanged(CheckboxState3, "Checkbox 3"))"
                                IsDisabled=true
                                LabelPLUS="disabled" />

                    <MBCheckbox @bind-Value="@CheckboxState3"
                                @bind-Value:after="@(() => ComponentValueChanged(CheckboxState3, "Checkbox 3"))"
                                IsDisabled=true
                                LabelLocationIsRightPLUS=false
                                LabelPLUS="disabled" />

                </Primary>
            </Material.Blazor.MD2.MBCard>
        </div>
    </PageContent>
</DemonstrationPage>



@code {
    private bool densityDefault;
    private bool densityMinus1;
    private bool densityMinus2;
    private bool densityMinus3;
    private bool densityMinus4;
    private bool densityMinus5;

    private bool CheckboxState { get; set; }
    private bool CheckboxState1 { get; set; }
    private bool CheckboxState2 { get; set; }
    private bool CheckboxState3 { get; set; } = true;


    private void ComponentValueChanged(bool value, string componentName)
    {
        ToastService.ShowToast(heading: $"{componentName} Clicked", message: $"Two way binding Value: {value}", level: MBToastLevel.Success, showIcon: false);
    }


    private void ButtonClick(string notification)
    {
        ToastService.ShowToast(heading: "Button Clicked", message: notification, level: MBToastLevel.Success, showIcon: false);
    }
}
