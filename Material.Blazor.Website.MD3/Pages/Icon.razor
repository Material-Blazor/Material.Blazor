@page "/icon"

@inject IMBToastService ToastService



<DemonstrationPage ComponentAndPageName="Icon"
                   DetailedArticle="Icon"
                   MaterialDesignPage=""
                   Title="Icon Demonstration">
    <Description>
        <p>
            Shows several icons.
        </p>
    </Description>

    <PageContent>
        <div class="mdc-layout-grid__cell--span-4">
            <Material.Blazor.MD2.MBCard AutoStyled="true">
                <Primary>
                    <h2 class="mb-card__title mdc-typography mdc-typography--headline6">
                        Outlined Icon
                    </h2>
                    <p>
                        <MBIcon IconName="access_alarms"
                                IconStyle="MBIconStyle.Outlined" />
                    </p>
                    <p>
                        <MBIcon IconName="favorite"
                                IconStyle="MBIconStyle.Outlined" />
                    </p>
                </Primary>
            </Material.Blazor.MD2.MBCard>
        </div>

        <div class="mdc-layout-grid__cell--span-4">
            <Material.Blazor.MD2.MBCard AutoStyled="true">
                <Primary>
                    <h2 class="mb-card__title mdc-typography mdc-typography--headline6">
                        Rounded Icon
                    </h2>

                    <p>
                        <MBIcon IconName="access_alarms"
                                IconStyle="MBIconStyle.Rounded" />
                    </p>
                    <p>
                        <MBIcon IconName="favorite"
                                IconStyle="MBIconStyle.Rounded" />
                    </p>
                </Primary>
            </Material.Blazor.MD2.MBCard>
        </div>

        <div class="mdc-layout-grid__cell--span-4">
            <Material.Blazor.MD2.MBCard AutoStyled="true">
                <Primary>
                    <h2 class="mb-card__title mdc-typography mdc-typography--headline6">
                        Sharp Icon
                    </h2>

                    <p>
                        <MBIcon IconName="access_alarms"
                                IconStyle="MBIconStyle.Sharp" />
                    </p>
                    <p>
                        <MBIcon IconName="favorite"
                                IconStyle="MBIconStyle.Sharp" />
                    </p>
                </Primary>
            </Material.Blazor.MD2.MBCard>
        </div>
    </PageContent>
</DemonstrationPage>
