@page "/tabs"

@inject IMBToastService ToastService

@using Material.Blazor

<DemonstrationPage ComponentAndPageName="Tabs"
                   MaterialWebPage="tabs"
                   RequiresDisableSelection="true"
                   Title="Tabs Demonstration">
    <Description>
        <p>
            Demonstrates a list with list items, list dividers, and a list selection group.
        </p>
    </Description>

    <PageContent>

        <div class="mdc-layout-grid__cell--span-4">
            <Material.Blazor.MD2.MBCard AutoStyled="true">
                <Primary>
                    <h2 class="mb-card__title mdc-typography mdc-typography--headline6">
                        Primary, text only
                    </h2>

                    <p>
                        <MBTabs TabItems="@tabItemsText" />
                    </p>
                </Primary>
            </Material.Blazor.MD2.MBCard>
        </div>

        <div class="mdc-layout-grid__cell--span-4">
            <Material.Blazor.MD2.MBCard AutoStyled="true">
                <Primary>
                    <h2 class="mb-card__title mdc-typography mdc-typography--headline6">
                        Primary, text and icons
                    </h2>

                    <p>
                        <MBTabs TabItems="@tabItemsTextAndIcons" />
                    </p>
                </Primary>
            </Material.Blazor.MD2.MBCard>
        </div>

        <div class="mdc-layout-grid__cell--span-4">
            <Material.Blazor.MD2.MBCard AutoStyled="true">
                <Primary>
                    <h2 class="mb-card__title mdc-typography mdc-typography--headline6">
                        Primary, text and icons, icons inline
                    </h2>

                    <p>
                        <MBTabs TabItems="@tabItemsTextAndIconsInline" />
                    </p>
                </Primary>
            </Material.Blazor.MD2.MBCard>
        </div>

        <div class="mdc-layout-grid__cell--span-4">
            <Material.Blazor.MD2.MBCard AutoStyled="true">
                <Primary>
                    <h2 class="mb-card__title mdc-typography mdc-typography--headline6">
                        Primary, icons only
                    </h2>

                    <p>
                        <MBTabs TabItems="@tabItemsIcons" />
                    </p>
                </Primary>
            </Material.Blazor.MD2.MBCard>
        </div>

        <div class="mdc-layout-grid__cell--span-4">
            <Material.Blazor.MD2.MBCard AutoStyled="true">
                <Primary>
                    <h2 class="mb-card__title mdc-typography mdc-typography--headline6">
                        Primary, text only, lengthy
                    </h2>

                    <p>
                        <MBTabs TabItems="@tabItemsTextLong" />
                    </p>
                </Primary>
            </Material.Blazor.MD2.MBCard>
        </div>

        <div class="mdc-layout-grid__cell--span-4">
            <Material.Blazor.MD2.MBCard AutoStyled="true">
                <Primary>
                    <h2 class="mb-card__title mdc-typography mdc-typography--headline6">
                        Secondary, text and icons
                    </h2>

                    <p>
                        <MBTabs TabItems="@tabItemsTextAndIconsSecondary" />
                    </p>
                </Primary>
            </Material.Blazor.MD2.MBCard>
        </div>

        <div class="mdc-layout-grid__cell--span-4">
            <Material.Blazor.MD2.MBCard AutoStyled="true">
                <Primary>
                    <h2 class="mb-card__title mdc-typography mdc-typography--headline6">
                        Primary, text only, controlling tabpanels
                    </h2>

                    <p>
                        <MBTabs IsControllingPanels="@true"
                                TabItems="@tabItemsTextPrimaryControllingDivs" />
                        
                        <p></p>
                        
                        <div role="tabpanel" id="panel-capybara" aria-labelledby="tab-capybara">
                            <image src="_content/Material.Blazor.Website.MD3/images/capybara.jpg" />
                        </div>

                        <div role="tabpanel" id="panel-cat" aria-labelledby="tab-cat" hidden>
                            <image src="_content/Material.Blazor.Website.MD3/images/cat.jpg" />
                        </div>

                        <div role="tabpanel" id="panel-dog" aria-labelledby="tab-dog" hidden>
                            <image src="_content/Material.Blazor.Website.MD3/images/dog.jpg" />
                        </div>

                        <div role="tabpanel" id="panel-llama" aria-labelledby="tab-llama" hidden>
                            <image src="_content/Material.Blazor.Website.MD3/images/llama.jpg" />
                        </div>
                    </p>
                </Primary>
            </Material.Blazor.MD2.MBCard>
        </div>

        <div class="mdc-layout-grid__cell--span-6">
            <Material.Blazor.MD2.MBCard AutoStyled="true">
                <Primary>
                    <h2 class="mb-card__title mdc-typography mdc-typography--headline6">
                        Primary, text and icons, controlling tabpanels
                    </h2>

                    <p>
                        <MBTabs IsControllingPanels="@true"
                                TabItems="@tabItemsTextAndIconsPrimaryControllingDivs" />

                        <p></p>
                        
                        <div role="tabpanel" id="panel-keyboard" aria-labelledby="tab-keyboard">Keyboard</div>
                        <div role="tabpanel" id="panel-guitar" aria-labelledby="tab-guitar" hidden>Guitar</div>
                        <div role="tabpanel" id="panel-drums" aria-labelledby="tab-drums" hidden>Drums</div>
                        <div role="tabpanel" id="panel-bass" aria-labelledby="tab-bass" hidden>Bass</div>
                        <div role="tabpanel" id="panel-saxophone" aria-labelledby="tab-saxophone" hidden>Saxophone</div>
                    </p>
                </Primary>
            </Material.Blazor.MD2.MBCard>
        </div>

    </PageContent>
</DemonstrationPage>



