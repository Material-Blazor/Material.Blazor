@namespace BlazorMdc.Demo

@inherits LayoutComponentBase

@inject IPMdcAnimatedNavigationManager PMdcAnimatedNavigationManager
@inject DemoConfiguration DemoConfiguration

<PMdcToastAnchor />

<BMdc.MdcDrawer @ref="@sidebar"
           IsDismissible="true">
    <div class="mdc-list">
        <BMdc.MdcListItem NavigationReference="" LeadingIcon="home" Text="Home" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="" LeadingIcon="home" Text="Home (Disabled)" OnClick="@ListItemClickHandler" Disabled="true" />
        <BMdc.MdcListItem NavigationReference="autocomplete" LeadingIcon="keyboard" Text="Autocomplete" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="button" LeadingIcon="touch_app" Text="Button" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="card" LeadingIcon="dashboard" Text="Card" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="cascadingdefaults" LeadingIcon="web" Text="CascadingDefaults" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="checkbox" LeadingIcon="check_box" Text="Checkbox" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="datatable" LeadingIcon="table_chart" Text="Data Table" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="datepicker" LeadingIcon="date_range" Text="Date Picker" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="debouncedtextfield" LeadingIcon="search" Text="Debounced Text Field" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="dialog" LeadingIcon="picture_in_picture" Text="Dialog" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="form" LeadingIcon="ballot" Text="Form" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="list" LeadingIcon="list" Text="List" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="menu" LeadingIcon="menu" Text="Menu" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="miscellaneous" LeadingIcon="text_format" Text="Miscellaneous" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="numericfield" LeadingIcon="money" Text="Numeric Field" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="pageddatalist" LeadingIcon="view_list" Text="Paged Data List" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="paginator" LeadingIcon="pages" Text="Paginator" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="progress" LeadingIcon="access_time" Text="Progress" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="radiobuttons" LeadingIcon="radio_button_checked" Text="Radio Buttons" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="select" LeadingIcon="arrow_drop_down" Text="Select" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="slidingcontent" LeadingIcon="compare_arrows" Text="Sliding Content" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="switch" LeadingIcon="toggle_on" Text="Switch" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="tabbar" LeadingIcon="tab" Text="Tab Bar" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="textarea" LeadingIcon="assignment" Text="Text Area" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="textfield" LeadingIcon="text_format" Text="Text Field" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListItem NavigationReference="toast" LeadingIcon="textsms" Text="Toast" OnClick="@ListItemClickHandler" />
        <BMdc.MdcListDivider />
        <BMdc.MdcListItem NavigationReference="wrappedinput" LeadingIcon="menu" Text="Wrapped input component" OnClick="@ListItemClickHandler" />
    </div>
</BMdc.MdcDrawer>

<div class="mdc-drawer-app-content">
    <BMdc.MdcTopAppBar Title="BlazorMdc - Material Theme components for Blazor"
                  @onclick="@SideBarToggle"
                  NavIcon="menu"
                  ScrollTarget="#main-content"
                  TopAppBarType="@DemoConfiguration.TopAppBarType"
                  Class="mdc-top-app-bar--short-has-action-item">
        <div id="account-target">
            <BMdc.MdcIconButtonToggle @bind-Value="PMdcAnimatedNavigationManager.Configuration.ApplyAnimation" IconOn="directions_run" IconOff="airline_seat_individual_suite" />
        </div>
    </BMdc.MdcTopAppBar>

    <main class="main-content" id="main-content">
        <PMdcAnimatedNavigation>
            <div class="mdc-top-app-bar--fixed-adjust">
                <div class="mdc-card main-content-card">
                    <div class="mdc-layout-grid">
                        <div class="mdc-layout-grid__inner">
                            <div class="mdc-layout-grid__cell--span-12">
                                @Body
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </PMdcAnimatedNavigation>
    </main>
</div>

@code {
    BMdc.MdcDrawer sidebar;

    private void ListItemClickHandler(string NavigationReference)
    {
        sidebar.NotifyNavigation();
        PMdcAnimatedNavigationManager.NavigateTo(NavigationReference);
    }

    private void SideBarToggle()
    {
        sidebar.Toggle();
    }
}
