@namespace BlazorMdc.Demo

@page "/datepicker"



<h1 class="@MdcTypography.Heading4">Select samples</h1>

<p>See <code>DatePickerSample.razor</code> for sources.</p>

<PMdcDatePicker Label="Filled" @bind-Value="@filled" SelectInputStyle="MdcSelectInputStyle.Filled" MinDate="min" MaxDate="max"></PMdcDatePicker>
<p style="margin-bottom: 4em;">Selected: '<strong>@filled.ToString()</strong>'</p>

<PMdcDatePicker Label="Weekdays Outlined" @bind-Value="@outlined" SelectInputStyle="MdcSelectInputStyle.Outlined" DateSelectionCriteria="PMdcDateSelectionCriteria.WeekdaysOnly" MinDate="min" MaxDate="max"></PMdcDatePicker>
<p style="margin-bottom: 20em;">Selected: '<strong>@outlined.ToString()</strong>'</p>

<p>Inline date picker purely for test purposes - in production please use <code>PMdcDatePicker</code></p>
<InternalDatePickerPanel @bind-Value="@inline" Class="mdc-elevation--z3" MinDate="min" MaxDate="max"></InternalDatePickerPanel>
<p style="margin-bottom: 4em;">Selected: '<strong>@inline.ToString()</strong>'</p>



@code {
    DateTime inline = DateTime.Today.AddMonths(1);
    DateTime filled = DateTime.Today.AddMonths(1);
    DateTime outlined = DateTime.Today.AddMonths(1);

    DateTime min = new DateTime(2019, 12, 14);
    DateTime max = new DateTime(2097, 6, 14);
}