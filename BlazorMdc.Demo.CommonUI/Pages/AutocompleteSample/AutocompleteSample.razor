@namespace BlazorMdc.Demo

@page "/autocomplete"



<h1 class="mdc-typography--headline4">Autocomplete samples</h1>

<p>See <code>AutocompleteSample.razor</code> for sources.</p>

<p>Selection disallowing blanks: '<strong>@(selection1 ?? "")</strong>'</p>

<BMdcPlus.Autocomplete @bind-Value="@selection1" Label="Blanks disallowed" TextInputStyle="BMdcModel.TextInputStyle.Filled" SelectItems="@fruits" LeadingIcon="alarm" />

<p style="margin-top: 4em;">Selection dallowing blanks: '<strong>@(selection2 ?? "")</strong>'</p>

<BMdcPlus.Autocomplete @bind-Value="@selection2" Label="Blanks allowed" TextInputStyle="BMdcModel.TextInputStyle.Outlined" SelectItems="@fruits" AllowBlankResult="true" TrailingIcon="fa-dragon" IconFoundry="BMdcModel.IconHelper.FAFoundry(relativeSize: BMdcModel.IconFARelativeSize.Large)" />

<p style="margin-top: 4em;">Selection ignoring whitespace for comparison: '<strong>@(selection3 ?? "")</strong>'</p>

<BMdcPlus.Autocomplete @bind-Value="@selection3" Label="Whitespace ignored" TextInputStyle="BMdcModel.TextInputStyle.FullWidth" SelectItems="@fruits" IgnoreWhitespace="true" />



