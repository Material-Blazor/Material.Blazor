@namespace BlazorMdc.Demo

@page "/menu"

<h1 class="mdc-typography--headline4">Menu samples</h1>

<p>See <code>MenuSample.razor</code> for sources.</p>

<div>
    <MTButton Label="Open Menu" @onclick="@OpenMenuAsync" />

    <div class="mdc-menu-surface--anchor">
        <MTMenu @ref="menu">
            <MTListItem Label="One" LeadingIcon="home" @onclick="@(() => OnClickHandler("One"))" />
            <MTListItem Label="Two" @onclick="@(() => OnClickHandler("Two"))" />
            <MTListItem Label="Three" LeadingIcon="shield" IconFoundry="MTIconHelper.OIFoundry()" @onclick="@(() => OnClickHandler("Three"))" />
            <MTListDivider />
            <MTMenuSelectionGroup>
                <MTListItem Label="Four" LeadingIcon="done" @onclick="@(() => OnClickHandler("Four"))" />
                <MTListItem Label="Five" LeadingIcon="done" @onclick="@(() => OnClickHandler("Five"))" />
            </MTMenuSelectionGroup>
            <MTListDivider />
            <MTListItem Label="Six (disabled)" Disabled="true" @onclick="@(() => OnClickHandler("Six"))" />
        </MTMenu>
    </div>
</div>

<p>Clicked: @clickResult</p>


@code {
    private MTMenu menu;
    private string clickResult = "";

    private async Task OpenMenuAsync()
    {
        await menu.ToggleAsync();
    }

    protected void OnClickHandler(string NavigationReference)
    {
        clickResult = NavigationReference;
    }

}
