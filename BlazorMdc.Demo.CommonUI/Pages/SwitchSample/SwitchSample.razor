@namespace BlazorMdc.Demo

@page "/switch"

<h1 class="mdc-typography--headline4">Switch samples</h1>

<p>See <code>SwitchSample.razor</code> for sources.</p>

<p>
    <MTSwitch Label="Switch 1" @bind-Value="@isCheckedA" Disabled="@DisableComponents" /><span style="margin-left: 3em;">@labelA</span>
    <MTSwitch Label="Switch 1" @bind-Value="@isCheckedA" Disabled="@DisableComponents" /><span style="margin-left: 3em;">@labelA</span>
</p>

<p>
    <MTSwitch Label="Switch 2" @bind-Value="@isCheckedB" Disabled="@DisableComponents" /><span style="margin-left: 3em;">@labelB</span>
</p>

<p>
    <MTSwitch Label="Disabled" @bind-Value="@isCheckedC" disabled />
</p>

@code {
    [CascadingParameter(Name = "DisableComponents")] private bool DisableComponents { get; set; }

    bool isCheckedA;
    string labelA => "This switch is " + (isCheckedA ? "set" : "unset");

    bool isCheckedB = true;
    string labelB => "This switch is " + (isCheckedB ? "set" : "unset");

    bool isCheckedC;
}
