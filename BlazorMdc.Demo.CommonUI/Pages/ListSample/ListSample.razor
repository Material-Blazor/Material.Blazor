@namespace BlazorMdc.Demo

@page "/list"

<h1 class="mdc-typography--headline4">List samples</h1>

<p>See <code>ListSample.razor</code> for sources.</p>

<p><MdcSwitch @bind-Value="@dense" Label="Set for dense" /></p>
<p><MdcSwitch @bind-Value="@hideLineTwo" Label="Hide line two" /></p>
<p><MdcSwitch @bind-Value="@hideLineThree" Label="Hide line three" /></p>

<MdcList Items="@displayedProducts"
         Context="product"
         ShowSeparators="true"
         KeyboardInteractions="true"
         Ripple="true"
         AvatarList="true"
         Dense="@dense"
         HideLineTwo="@hideLineTwo"
         HideLineThree="@hideLineThree"
         OnClick="OnClick"
         ListStyle="@MdcListStyle.Outlined">

    <Icon>shop</Icon>
    <Title>@product.DisplayName</Title>
    <Actions>
        <div style="width: 10rem">
            <MdcSwitch @bind-Value="@product.IsInStock"
                       Label="@(product.IsInStock ? "In stock" : "Out of stock")" />
        </div>
    </Actions>
</MdcList>

<p></p>

<MdcList Items="@displayedProducts"
         Context="product"
         ShowSeparators="true"
         KeyboardInteractions="true"
         Ripple="true"
         AvatarList="true"
         Dense="@dense"
