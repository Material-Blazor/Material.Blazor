@namespace BlazorMdc.Demo

@page "/textfield"

@inject IJSRuntime jsRuntime

<style>
    .my-orange-background {
        background-color: orange !important;
    }
</style>

<h1 class="mdc-typography--headline4">Text field samples</h1>

<p>See <code>TextFieldSample.razor</code> for sources.</p>

<p style="margin-top: 3rem;">Filled style</p>
<p><MTTextField class="my-orange-background" Label="Filled" @bind-Value="@currentValueFilled" TextInputStyle="TextInputStyleEnum.Filled" TrailingIcon="account_balance_wallet" Disabled="@DisableComponents" /></p>
<p><MTTextField Label="Filled (repeated)" @bind-Value="@currentValueFilled" TextInputStyle="TextInputStyleEnum.Filled" TrailingIcon="account_balance_wallet" Disabled="@DisableComponents" /></p>
<p>You typed: <strong>'@(currentValueFilled ?? "")'</strong></p>


<p style="margin-top: 3rem;">Filled style</p>
<p><MTTextField style="background-color: aquamarine;" Label="Filled" @bind-Value="@currentValueFilled" TextInputStyle="TextInputStyleEnum.Filled" TrailingIcon="account_balance_wallet" Disabled="@DisableComponents" /></p>
<p>You typed: <strong>'@(currentValueFilled ?? "")'</strong></p>

<p style="margin-top: 3rem;">Outlined style</p>
<p><MTTextField Label="Outlined" @bind-Value="@currentValueOutlined" TextInputStyle="TextInputStyleEnum.Outlined" LeadingIcon="account_balance_wallet" Disabled="@DisableComponents" /></p>
<p>You typed: <strong>'@(currentValueOutlined ?? "")'</strong></p>

<p style="margin-top: 3rem;">Full Width style (floating labels diabled, adhering to MT style guidelines)</p>
<p><MTTextField Label="Full Width" @bind-Value="@currentValueFullWidth" TextInputStyle="TextInputStyleEnum.FullWidth" Disabled="@DisableComponents" /></p>
<p>You typed: <strong>'@(currentValueFullWidth ?? "")'</strong></p>

<p style="margin-top: 3rem;">Right aligned</p>
<p><MTTextField Label="Right aligned" @bind-Value="@currentValueRight" TextInputStyle="TextInputStyleEnum.Outlined" TextAlignStyle="TextAlignStyle.Right" Disabled="@DisableComponents" /></p>
<p>You typed: <strong>'@(currentValueRight ?? "")'</strong></p>

<p style="margin-top: 3rem;">Password</p>
<p><MTTextField Label="Password" @bind-Value="@currentValuePassword" TextInputStyle="TextInputStyleEnum.Outlined" type="password" Disabled="@DisableComponents" /></p>
<p>You typed: <strong>'@(currentValuePassword ?? "")'</strong></p>


@code {
    [CascadingParameter(Name = "DisableComponents")] private bool DisableComponents { get; set; }

    string currentValueFilled;
    string currentValueOutlined;
    string currentValueFullWidth;
    string currentValueRight;
    string currentValuePassword;
}
