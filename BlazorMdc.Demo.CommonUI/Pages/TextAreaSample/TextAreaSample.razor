@namespace BlazorMdc.Demo

@page "/textarea"

@inject IJSRuntime jsRuntime

<h1 class="mdc-typography--headline4">Text area samples</h1>

<p>See <code>TextAreaSample.razor</code> for sources.</p>

<p><MTTextArea Label="Filled" @bind-Value="@currentValueFilled" Rows="3" TextInputStyle="MTTextInputStyle.Filled" Disabled="@DisableComponents" /></p>
<p>You typed: <strong>'@(currentValueFilled ?? "")'</strong></p>

<p><MTTextArea Label="Outlined" @bind-Value="@currentValueOutlined" Rows="3" TextInputStyle="MTTextInputStyle.Outlined" Disabled="@DisableComponents" /></p>
<p>You typed: <strong>'@(currentValueOutlined ?? "")'</strong></p>

<p><MTTextArea Label="Density Minus 1" Density="@MTDensity.Minus1" Rows="3" TextInputStyle="MTTextInputStyle.Filled" Disabled="@DisableComponents" /></p>
<p><MTTextArea Label="Density Minus 2" Density="@MTDensity.Minus2" Rows="3" TextInputStyle="MTTextInputStyle.Filled" Disabled="@DisableComponents" /></p>
<p><MTTextArea Label="Density Minus 3" Density="@MTDensity.Minus3" Rows="3" TextInputStyle="MTTextInputStyle.Filled" Disabled="@DisableComponents" /></p>
<p><MTTextArea Label="Density Minus 4" Density="@MTDensity.Minus4" Rows="3" TextInputStyle="MTTextInputStyle.Filled" Disabled="@DisableComponents" /></p>

<p><MTTextArea Label="Density Minus 1" Density="@MTDensity.Minus1" Rows="3" TextInputStyle="MTTextInputStyle.Outlined" Disabled="@DisableComponents" /></p>
<p><MTTextArea Label="Density Minus 2" Density="@MTDensity.Minus2" Rows="3" TextInputStyle="MTTextInputStyle.Outlined" Disabled="@DisableComponents" /></p>
<p><MTTextArea Label="Density Minus 3" Density="@MTDensity.Minus3" Rows="3" TextInputStyle="MTTextInputStyle.Outlined" Disabled="@DisableComponents" /></p>
<p><MTTextArea Label="Density Minus 4" Density="@MTDensity.Minus4" Rows="3" TextInputStyle="MTTextInputStyle.Outlined" Disabled="@DisableComponents" /></p>




@code {
    [CascadingParameter(Name = "DisableComponents")] private bool DisableComponents { get; set; }

    string currentValueFilled = "test";
    string currentValueOutlined;
    string currentValueDensityM1;
    string currentValueDensityM2;
    string currentValueDensityM3;
}
