@namespace BlazorMdc.Demo

@inject IPMdcAnimatedNavigationManager PMdcAnimatedNavigationManager
@inject DemoConfiguration DemoConfiguration

@page "/"

<h1 class="mdc-typography--headline3">Hello, world!</h1>

<p>This sample demonstrates the use of RazorComponents.MaterialDesign components.</p>

<p>Currently executing on <strong>@runtime</strong> built in <strong>@mode</strong> mode.</p>



<h5 class="mdc-typography--headline5">Top App Bar</h5>

<PMdcRadioButtonGroup @bind-Value="@DemoConfiguration.TopAppBarType" Items="@appBarTypes" />

<h5 class="mdc-typography--headline5">Animated Navigation</h5>

<p><BMdc.MdcCheckbox @bind-Value="@PMdcAnimatedNavigationManager.Configuration.ApplyAnimation" Label="Apply animiations to page navigation" /></p>


<p style="margin-top: 80rem;">&nbsp;</p>


@code {
    
    IEnumerable<BModel.ListElement<BEnum.TopAppBarType>> appBarTypes => from c in (BEnum.TopAppBarType[])Enum.GetValues(typeof(BEnum.TopAppBarType))
                                                                 select new BModel.ListElement<BEnum.TopAppBarType>
                                                                 {
                                                                     SelectedValue = c,
                                                                     Label = c.ToString(),
                                                                 };
}
