@namespace BlazorMdc.Demo

@inject IAnimatedNavigationManager AnimatedNavigationManager
@inject DemoConfiguration DemoConfiguration

@page "/"

<h1 class="mdc-typography--headline3">Hello, world!</h1>

<p>This sample demonstrates the use of RazorComponents.MaterialDesign components.</p>

<p>Currently executing on <strong>@runtime</strong> built in <strong>@mode</strong> mode.</p>



<h5 class="mdc-typography--headline5">Top App Bar</h5>

<BMdcPlus.RadioButtonGroup @bind-Value="@DemoConfiguration.TopAppBarType" Items="@appBarTypes" />

<h5 class="mdc-typography--headline5">Animated Navigation</h5>

<p><BMdc.Checkbox @bind-Value="@AnimatedNavigationManager.Configuration.ApplyAnimation" Label="Apply animiations to page navigation" /></p>


<p style="margin-top: 80rem;">&nbsp;</p>


@code {
    
    IEnumerable<BMdcModel.ListElement<BMdcModel.TopAppBarType>> appBarTypes => from c in (BMdcModel.TopAppBarType[])Enum.GetValues(typeof(BMdcModel.TopAppBarType))
                                                                 select new BMdcModel.ListElement<BMdcModel.TopAppBarType>
                                                                 {
                                                                     SelectedValue = c,
                                                                     Label = c.ToString(),
                                                                 };
}
