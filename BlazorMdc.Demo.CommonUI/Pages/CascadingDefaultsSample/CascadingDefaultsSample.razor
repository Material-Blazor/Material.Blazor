@namespace BlazorMdc.Demo

@page "/cascadingdefaults"


<h1 class="mdc-typography--headline4">Cascading defaults samples</h1>

<p>Shows how MdcpCascadingDefaults can be used as a cascading value to set default component styles.</p>
<p>See <code>CascadingDefaultsSample.razor</code> for sources.</p>

<h3 class="mdc-typography--headline5" style="margin-top: 4rem;">BlazorMdc default styles</h3>
<p><MTSelect Label="Select" @bind-Value="@selectDefault" Items="items" ItemValidation="@MTItemValidation.NoSelection" /></p>
<p><MTDatePicker Label="Date" @bind-Value="dateDefault" MinDate="min" MaxDate="max" /></p>
<p><MTTextField Label="Text Field" @bind-Value="textFieldDefault" /></p>
<p><MTTextArea Label="Text Area" Rows="2" @bind-Value="textAreaDefault" /></p>
<p><MTButton Label="Button" /></p>
<p><MTIcon IconName="thumb_up" /></p>

<CascadingValue Value="defaults1">
    <h3 class="mdc-typography--headline5" style="margin-top: 4rem;">Variant 1</h3>
    <p><MTSelect Label="Select" @bind-Value="@selectVariant1" Items="items" /></p>
    <p><MTDatePicker Label="Date" @bind-Value="dateVariant1" MinDate="min" MaxDate="max" /></p>
    <p><MTTextField Label="Text Field" @bind-Value="textFieldVariant1" /></p>
    <p><MTTextArea Label="Text Area" Rows="2" @bind-Value="textAreaVariant1" /></p>
    <p><MTButton Label="Button" /></p>
    <p><MTIcon IconName="thumb_up" /></p>
</CascadingValue>

<CascadingValue Value="defaults2">
    <h3 class="mdc-typography--headline5" style="margin-top: 4rem;">Variant 2</h3>
    <p><MTSelect Label="Select" @bind-Value="@selectVariant2" Items="items" /></p>
    <p><MTDatePicker Label="Date" @bind-Value="dateVariant2" MinDate="min" MaxDate="max" /></p>
    <p><MTTextField Label="Text Field" @bind-Value="textFieldVariant2" /></p>
    <p><MTTextArea Label="Text Area" Rows="2" @bind-Value="textAreaVariant2" /></p>
    <p><MTButton Label="Button" /></p>
    <p><MTIcon IconName="thumb_up" /></p>
</CascadingValue>

<CascadingValue Value="defaults3">
    <h3 class="mdc-typography--headline5" style="margin-top: 4rem;">Variant 3</h3>
    <p><MTSelect Label="Select" @bind-Value="@selectVariant3" Items="items" /></p>
    <p><MTDatePicker Label="Date" @bind-Value="dateVariant3" MinDate="min" MaxDate="max" /></p>
    <p><MTTextField Label="Text Field" @bind-Value="textFieldVariant3" /></p>
    <p><MTTextArea Label="Text Area" Rows="2" @bind-Value="textAreaVariant3" /></p>
    <p><MTButton Label="Button" /></p>
    <p><MTIcon IconName="fa-hiking" /></p>
</CascadingValue>



@code {
    string selectDefault;
    string textFieldDefault;
    string textAreaDefault;
    DateTime dateDefault = new DateTime(2020, 2, 29);
    DateTime min = new DateTime(2019, 1, 1);
    DateTime max = new DateTime(2078, 12, 31);


    MTCascadingDefaults defaults1 = new MTCascadingDefaults()
    {
        SelectInputStyle = MTSelectInputStyle.Outlined,
        TextInputStyle = MTTextInputStyle.Outlined,
        ButtonStyle = MTButtonStyle.Outlined,
        DateSelectionCriteria = MTDateSelectionCriteria.WeekdaysOnly,
        ItemValidation = MTItemValidation.NoSelection,
        IconMITheme = MTIconMITheme.Outlined
    };
    string selectVariant1;
    string textFieldVariant1;
    string textAreaVariant1;
    DateTime dateVariant1 = new DateTime(2020, 2, 29);


    MTCascadingDefaults defaults2 = new MTCascadingDefaults()
    {
        SelectInputStyle = MTSelectInputStyle.Filled,
        TextInputStyle = MTTextInputStyle.Filled,
        ButtonStyle = MTButtonStyle.ContainedUnelevated,
        DateSelectionCriteria = MTDateSelectionCriteria.WeekendsOnly,
        ItemValidation = MTItemValidation.NoSelection,
        IconMITheme = MTIconMITheme.TwoTone
    };
    string selectVariant2;
    string textFieldVariant2;
    string textAreaVariant2;
    DateTime dateVariant2 = new DateTime(2020, 2, 29);


    MTCascadingDefaults defaults3 = new MTCascadingDefaults()
    {
        SelectInputStyle = MTSelectInputStyle.Outlined,
        TextInputStyle = MTTextInputStyle.Filled,
        ButtonStyle = MTButtonStyle.ContainedRaised,
        DateSelectionCriteria = MTDateSelectionCriteria.AllowAll,
        ItemValidation = MTItemValidation.NoSelection,
        IconFoundryName = MTIconFoundryName.FontAwesome,
        IconFARelativeSize = MTIconFARelativeSize.TenTimes
    };
    string selectVariant3;
    string textFieldVariant3;
    string textAreaVariant3;
    DateTime dateVariant3 = new DateTime(2020, 2, 29);



    MTListElement<string>[] items = new MTListElement<string>[]
    {
        new MTListElement<string> { SelectedValue = "", Label = "" },
        new MTListElement<string> { SelectedValue = "brit-short", Label = "British Shorthair" },
        new MTListElement<string> { SelectedValue = "russ-blue", Label = "Russian Blue" },
        new MTListElement<string> { SelectedValue = "ice-invis", Label = "Icelandic Invisible" }
    };
}