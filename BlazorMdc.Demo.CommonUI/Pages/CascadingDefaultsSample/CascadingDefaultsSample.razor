@namespace BlazorMdc.Demo

@page "/cascadingdefaults"


<h1 class="mdc-typography--headline4">Cascading defaults samples</h1>

<p>Shows how MdcpCascadingDefaults can be used as a cascading value to set default component styles.</p>
<p>See <code>CascadingDefaultsSample.razor</code> for sources.</p>

<h3 class="mdc-typography--headline5" style="margin-top: 4rem;">BlazorMdc default styles</h3>
<p><BMdc.Select Label="Select" @bind-Value="@selectDefault" Items="items" ItemValidation="@BMdcModel.ItemValidation.NoSelection" /></p>
<p><BMdcPlus.DatePicker Label="Date" @bind-Value="dateDefault" MinDate="min" MaxDate="max" /></p>
<p><BMdc.TextField Label="Text Field" @bind-Value="textFieldDefault" /></p>
<p><BMdc.TextArea Label="Text Area" Rows="2" @bind-Value="textAreaDefault" /></p>
<p><BMdc.Button Label="Button" /></p>
<p><BMdcPlus.Icon IconName="thumb_up" /></p>

<CascadingValue Value="defaults1">
    <h3 class="mdc-typography--headline5" style="margin-top: 4rem;">Variant 1</h3>
    <p><BMdc.Select Label="Select" @bind-Value="@selectVariant1" Items="items" /></p>
    <p><BMdcPlus.DatePicker Label="Date" @bind-Value="dateVariant1" MinDate="min" MaxDate="max" /></p>
    <p><BMdc.TextField Label="Text Field" @bind-Value="textFieldVariant1" /></p>
    <p><BMdc.TextArea Label="Text Area" Rows="2" @bind-Value="textAreaVariant1" /></p>
    <p><BMdc.Button Label="Button" /></p>
    <p><BMdcPlus.Icon IconName="thumb_up" /></p>
</CascadingValue>

<CascadingValue Value="defaults2">
    <h3 class="mdc-typography--headline5" style="margin-top: 4rem;">Variant 2</h3>
    <p><BMdc.Select Label="Select" @bind-Value="@selectVariant2" Items="items" /></p>
    <p><BMdcPlus.DatePicker Label="Date" @bind-Value="dateVariant2" MinDate="min" MaxDate="max" /></p>
    <p><BMdc.TextField Label="Text Field" @bind-Value="textFieldVariant2" /></p>
    <p><BMdc.TextArea Label="Text Area" Rows="2" @bind-Value="textAreaVariant2" /></p>
    <p><BMdc.Button Label="Button" /></p>
    <p><BMdcPlus.Icon IconName="thumb_up" /></p>
</CascadingValue>

<CascadingValue Value="defaults3">
    <h3 class="mdc-typography--headline5" style="margin-top: 4rem;">Variant 3</h3>
    <p><BMdc.Select Label="Select" @bind-Value="@selectVariant3" Items="items" /></p>
    <p><BMdcPlus.DatePicker Label="Date" @bind-Value="dateVariant3" MinDate="min" MaxDate="max" /></p>
    <p><BMdc.TextField Label="Text Field" @bind-Value="textFieldVariant3" /></p>
    <p><BMdc.TextArea Label="Text Area" Rows="2" @bind-Value="textAreaVariant3" /></p>
    <p><BMdc.Button Label="Button" /></p>
    <p><BMdcPlus.Icon IconName="fa-hiking" /></p>
</CascadingValue>



@code {
    string selectDefault;
    string textFieldDefault;
    string textAreaDefault;
    DateTime dateDefault = new DateTime(2020, 2, 29);
    DateTime min = new DateTime(2019, 1, 1);
    DateTime max = new DateTime(2078, 12, 31);


    BMdcModel.CascadingDefaults defaults1 = new BMdcModel.CascadingDefaults()
    {
        SelectInputStyle = BMdcModel.SelectInputStyle.Outlined,
        TextInputStyle = BMdcModel.TextInputStyle.Outlined,
        ButtonStyle = BMdcModel.ButtonStyle.Outlined,
        DateSelectionCriteria = BMdcModel.DateSelectionCriteria.WeekdaysOnly,
        ItemValidation = BMdcModel.ItemValidation.NoSelection,
        IconMITheme = BMdcModel.IconMITheme.Outlined
    };
    string selectVariant1;
    string textFieldVariant1;
    string textAreaVariant1;
    DateTime dateVariant1 = new DateTime(2020, 2, 29);


    BMdcModel.CascadingDefaults defaults2 = new BMdcModel.CascadingDefaults()
    {
        SelectInputStyle = BMdcModel.SelectInputStyle.Filled,
        TextInputStyle = BMdcModel.TextInputStyle.FullWidth,
        ButtonStyle = BMdcModel.ButtonStyle.ContainedUnelevated,
        DateSelectionCriteria = BMdcModel.DateSelectionCriteria.WeekendsOnly,
        ItemValidation = BMdcModel.ItemValidation.NoSelection,
        IconMITheme = BMdcModel.IconMITheme.TwoTone
    };
    string selectVariant2;
    string textFieldVariant2;
    string textAreaVariant2;
    DateTime dateVariant2 = new DateTime(2020, 2, 29);


    BMdcModel.CascadingDefaults defaults3 = new BMdcModel.CascadingDefaults()
    {
        SelectInputStyle = BMdcModel.SelectInputStyle.Outlined,
        TextInputStyle = BMdcModel.TextInputStyle.Filled,
        ButtonStyle = BMdcModel.ButtonStyle.ContainedRaised,
        DateSelectionCriteria = BMdcModel.DateSelectionCriteria.AllowAll,
        ItemValidation = BMdcModel.ItemValidation.NoSelection,
        IconFoundryName = BMdcModel.IconFoundryName.FontAwesome,
        IconFARelativeSize = BMdcModel.IconFARelativeSize.TenTimes
    };
    string selectVariant3;
    string textFieldVariant3;
    string textAreaVariant3;
    DateTime dateVariant3 = new DateTime(2020, 2, 29);



    BMdcModel.ListElement<string>[] items = new BMdcModel.ListElement<string>[]
    {
        new BMdcModel.ListElement<string> { SelectedValue = "", Label = "" },
        new BMdcModel.ListElement<string> { SelectedValue = "brit-short", Label = "British Shorthair" },
        new BMdcModel.ListElement<string> { SelectedValue = "russ-blue", Label = "Russian Blue" },
        new BMdcModel.ListElement<string> { SelectedValue = "ice-invis", Label = "Icelandic Invisible" }
    };
}