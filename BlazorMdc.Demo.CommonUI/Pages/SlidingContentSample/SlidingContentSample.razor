@namespace BlazorMdc.Demo

@page "/slidingcontent"

<h1 class="mdc-typography--headline4">Sliding Content samples</h1>

<p>See <code>SlidingContentSample.razor</code> for sources.</p>

<p>
    <BMdc.Button Label="Move to Paragraph 4" @onclick="@(() => index = 3)" ButtonStyle="BMdcModel.ButtonStyle.ContainedRaised" />
</p>

<BMdcPlus.SlidingContent @ref="@slidingContent"
                    Items="@items"
                    @bind-ItemIndex="@index"
                    Context="item">

    <Content>
        <h3 class="mdc-typography--headline6">@item.Title</h3>
        <p>@item.Text</p>
    </Content>
</BMdcPlus.SlidingContent>

<p>
    <BMdc.Button Label="Previous" LeadingIcon="chevron_left" @onclick="@(() => index--)" ButtonStyle="BMdcModel.ButtonStyle.ContainedRaised" Disabled="@disablePrevious" />
    <BMdc.Button Label="Next" TrailingIcon="chevron_right" @onclick="@(() => index++)" ButtonStyle="BMdcModel.ButtonStyle.ContainedRaised" Disabled="@disableNext" />
</p>

