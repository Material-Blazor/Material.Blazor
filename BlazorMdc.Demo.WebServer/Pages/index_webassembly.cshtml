@page "/index_wasm"
@namespace BlazorMdc.Demo.WebServer
@using BlazorMdc.Demo.CommonUI
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BlazorMdc Demo (WebAssembly)</title>
    <base href="~/" />

    <link rel="icon" type="image/x-icon" sizes="32x32" href="_content/BlazorMdc.Demo.CommonUI//favicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog==" crossorigin="anonymous" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/open-iconic/1.1.1/font/css/open-iconic.min.css" crossorigin="anonymous" rel="stylesheet" />
    <link href="_content/BlazorMdc/blazormdc-bundled.min.css" rel="stylesheet" />
    <link href="_content/BlazorMdc.Demo.CommonUI/css/styles.css" rel="stylesheet" />
</head>
<body class="mdc-typography bmdc-custom-scrollbars">
    <app>
        <component type="typeof(App)" render-mode="Server" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_content/BlazorMdc/blazormdc-bundled.min.js"></script>
    <script src="_framework/blazor.webassembly.js"></script>
</body>
</html>
