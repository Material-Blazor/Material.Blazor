@namespace Material.Blazor

@inherits InputComponent<decimal>

<MBTextField @attributes="@AttributesToSplat()"
             @bind-Value="@FormattedValue"
             class="@(@class)"
             Density="@Density"
             Disabled="@AppliedDisabled"
             id="@id"
             Label="@Label"
             LeadingIcon="@LeadingIcon"
             LeadingToggleIcon="@LeadingToggleIcon"
             LeadingToggleIconButtonLink="@LeadingToggleIconButtonLink"
             LeadingToggleIconButtonLinkTarget="@LeadingToggleIconButtonLinkTarget"
             LeadingToggleIconSelected="@LeadingToggleIconSelected"
             min="@Min"
             max="@Max"
             @onfocusin="@OnFocusInAsync"
             @onfocusout="@OnFocusOutAsync"
             Prefix="@Prefix"
             style="@style"
             step="@(Math.Pow(10, -MyDecimalPlaces).ToString())"
             Suffix="@Suffix"
             SupportingText="@SupportingText"
             SupportingTextPersistent="@SupportingTextPersistent"
             TextAlignStyle="@TextAlignStyle"
             TextFieldId="@TextFieldId"
             TextInputStyle="@TextInputStyle"
             TrailingIcon="@TrailingIcon"
             TrailingToggleIcon="@TrailingToggleIcon"
             TrailingToggleIconButtonLink="@TrailingToggleIconButtonLink"
             TrailingToggleIconButtonLinkTarget="@TrailingToggleIconButtonLinkTarget"
             TrailingToggleIconSelected="@TrailingToggleIconSelected"
             ValidationMessageFor="@ValidationMessageFor" />
