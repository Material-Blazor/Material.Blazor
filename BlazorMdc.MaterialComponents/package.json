{
  "name": "blazor-mdc.node-material-components",
  "version": "0.0.0",
  "description": "Acquire MaterialComponents for BlazorMdc",
  "main": "server.js",
  "scripts": {
    "clean-wip": "@if exist wip rd /s /q wip",
    "clean-wwwroot": "@if exist wwwroot rd /s /q wwwroot",
    "build-matfont": "powershell.exe -Command \"New-Item -Path '.' -Name 'wip' -ItemType 'directory'; New-Item -Path '.' -Name 'wwwroot' -ItemType 'directory'; Invoke-WebRequest -Uri 'https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp' -OutFile '.\\wip\\material-components-icons.css'\"",
    "minify-matfont": "cleancss --level 1 --format breaksWith=lf --output wip\\material-components-icons.min.css wip\\material-components-icons.css",
    "build-bmdc": "dart-sass --load-path=node_modules --no-source-map ..\\BlazorMdc\\Styles\\blazormdc.scss wwwroot\\blazormdc.css",
    "minify-bmdc": "cleancss --level 1 --format breaksWith=lf --output wwwroot\\blazormdc.min.css wwwroot\\blazormdc.css",
    "build-bundle": "dart-sass --load-path=node_modules --no-source-map Styles\\blazormdc-material-bundle.scss wip\\blazormdc-material-bundle.css",
    "minify-bundle-css": "cleancss --level 1 --format breaksWith=lf --output wwwroot\\blazormdc-material-bundle.min.css wip\\blazormdc-material-bundle.css",
    "build-bmdc-ts": "tsc ..\\BlazorMdc\\Scripts\\blazormdc.ts",
    "minify-bundle-js": "terser ..\\BlazorMdc\\Scripts\\blazormdc.js node_modules\\material-components-web\\dist\\material-components-web.js --output wwwroot\\blazormdc-material-bundle.js.min",
    "copy-all": "xcopy /s /q /y wwwroot\\*.* ..\\BlazorMdc\\wwwroot"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^4.3.0",
    "material-components-web": "7.0.0",
    "dart-sass": "^1.25.0",
    "terser": "^4.8.0",
    "typescript": "^3.9.7"
  },
  "-vs-binding": {
    "BeforeBuild": [
      "install"
    ],
    "AfterBuild": [
      "clean-wwwroot",
      "build-scss-matf",
      "minify-css-matf",
      "delete-css-matf",
      "build-scss-bmdc",
      "minify-css-bmdc",
      "copy-material-css",
      "copy-material-js",
      "build-ts",
      "minify-js",
      "copy-all"
    ]
  }
}
