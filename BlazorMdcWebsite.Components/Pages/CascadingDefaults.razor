@page "/cascadingdefaults"


<DemonstrationPage Title="Cascading Defaults Demonstration"
                   DemoComponent="@this"
                   DetailedArticle="CascadingDefaults">
    <Description>
        <h2>Non-component</h2>
        <p>
            Repeats the same block of components with differing values in an MTCascadingDefaults cascading value, showing a wide variety of options but not fully comprehensive.
        </p>
    </Description>

    <PageContent>
        <div class="mdc-layout-grid__cell--span-12">
            <MTCard AutoStyled="true">
                <Primary>
                    <div class="mdc-layout-grid__inner">
                        <div class="mdc-layout-grid__cell--span-12">
                            <h2 class="bmdc-card__title mdc-typography mdc-typography--headline6">
                                Without Cascading Defaults
                            </h2>

                            <h3 class="bmdc-card__subtitle mdc-typography mdc-typography--subtitle2">
                                All components show default settings.
                            </h3>
                        </div>

                        <CascadingDefaultsPanel IconButtonIconName="eco" StoreIconName="local_grocery_store" />
                    </div>
                </Primary>
            </MTCard>
        </div>


        <div class="mdc-layout-grid__cell--span-12">
            <MTCard AutoStyled="true">
                <Primary>
                    <div class="mdc-layout-grid__inner">
                        <div class="mdc-layout-grid__cell--span-12">
                            <h2 class="bmdc-card__title mdc-typography mdc-typography--headline6">
                                Dense, Outlined, Right Aligned Text Field and Weekdays Only
                            </h2>

                            <MTCard AutoStyled="true" CardStyle="@MTCardStyle.Outlined" style="background-color: var(--bmdc-color-grey-100); color: var(--bmdc-color-blue-600); overflow: auto;">
                                <Primary>
                                    <pre>private MTCascadingDefaults Defaults1 = new MTCascadingDefaults()
{
    ThemeDensity = MTDensity.Minus3,
    ButtonStyle = MTButtonStyle.Outlined,
    TextInputStyle = MTTextInputStyle.Outlined,
    SelectInputStyle = MTSelectInputStyle.Outlined,
    ListStyle = MTListStyle.Outlined,
    CardStyle = MTCardStyle.Outlined,
    IconMITheme = MTIconMITheme.Outlined,
    TextAlignStyle = MTTextAlignStyle.Right,
    DateSelectionCriteria = MTDateSelectionCriteria.WeekdaysOnly
};</pre>
                                </Primary>
                            </MTCard>
                        </div>

                        <CascadingValue Value="@Defaults1" IsFixed="true">
                            <CascadingDefaultsPanel IconButtonIconName="eco" StoreIconName="local_grocery_store" />
                        </CascadingValue>
                    </div>
                </Primary>
            </MTCard>
        </div>


        <div class="mdc-layout-grid__cell--span-12">
            <MTCard AutoStyled="true">
                <Primary>
                    <div class="mdc-layout-grid__inner">
                        <div class="mdc-layout-grid__cell--span-12">
                            <h2 class="bmdc-card__title mdc-typography mdc-typography--headline6">
                                Disabled, Small Font Awesome Icons
                            </h2>

                            <MTCard AutoStyled="true" CardStyle="@MTCardStyle.Outlined" style="background-color: var(--bmdc-color-grey-100); color: var(--bmdc-color-blue-600); overflow: auto;">
                                <Primary>
                                    <pre>private MTCascadingDefaults Defaults2 = new MTCascadingDefaults()
{
    Disabled = true,
    IconFoundryName = MTIconFoundryName.FontAwesome,
    IconFARelativeSize = MTIconFARelativeSize.Small,
    ...
};</pre>
                                </Primary>
                            </MTCard>
                        </div>

                        <CascadingValue Value="@Defaults2" IsFixed="true">
                            <CascadingDefaultsPanel IconButtonIconName="fa-frog" StoreIconName="fa-atom" />
                        </CascadingValue>
                    </div>
                </Primary>
            </MTCard>
        </div>
    </PageContent>
</DemonstrationPage>



@code {
    private MTCascadingDefaults Defaults1 = new MTCascadingDefaults()
    {
        ThemeDensity = MTDensity.Minus3,
        ButtonStyle = MTButtonStyle.Outlined,
        TextInputStyle = MTTextInputStyle.Outlined,
        SelectInputStyle = MTSelectInputStyle.Outlined,
        ListStyle = MTListStyle.Outlined,
        CardStyle = MTCardStyle.Outlined,
        IconMITheme = MTIconMITheme.Outlined,
        TextAlignStyle = MTTextAlignStyle.Right,
        DateSelectionCriteria = MTDateSelectionCriteria.WeekdaysOnly
    };


    private MTCascadingDefaults Defaults2 = new MTCascadingDefaults()
    {
        Disabled = true,
        IconFoundryName = MTIconFoundryName.FontAwesome,
        IconFARelativeSize = MTIconFARelativeSize.Small,
        ThemeDensity = MTDensity.Minus3,
        ButtonStyle = MTButtonStyle.Outlined,
        TextInputStyle = MTTextInputStyle.Outlined,
        SelectInputStyle = MTSelectInputStyle.Outlined,
        ListStyle = MTListStyle.Outlined,
        CardStyle = MTCardStyle.Outlined,
        TextAlignStyle = MTTextAlignStyle.Right,
        DateSelectionCriteria = MTDateSelectionCriteria.WeekdaysOnly
    };
}