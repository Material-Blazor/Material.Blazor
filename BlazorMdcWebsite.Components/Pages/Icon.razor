@page "/icon"

@inject IMTToastService ToastService



<DemonstrationPage ComponentName="Icon"
                   Title="Icon Demonstration"
                   DemoComponent="@this"
                   DetailedArticle="Icon">
    <Description>
        <p>
            Shows several icons.
        </p>
    </Description>

    <PageContent>
        <div class="mdc-layout-grid__cell--span-4">
            <MTCard AutoStyled="true">
                <Primary>
                    <h2 class="bmdc-card__title mdc-typography mdc-typography--headline6">
                        Icon 
                    </h2>

                    <p><MTIcon IconName="access_alarms" /></p>
                    <p><MTIcon IconName="fa-dog" IconFoundry="@MTIconHelper.FAFoundry()" /></p>
                    <p><MTIcon IconName="fa-cat" IconFoundry="@MTIconHelper.FAFoundry()" /></p>
                    <p><MTIcon IconName="fa-horse" IconFoundry="@MTIconHelper.FAFoundry()" /></p>
                </Primary>
            </MTCard>
        </div>
    </PageContent>
</DemonstrationPage>
